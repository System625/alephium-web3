{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@deployments/*": ["./deployments/*"]
    }
  },
  "include": ["artifacts/ts/**/*"],
  "files": ["artifacts/ts/index.ts"]
}
